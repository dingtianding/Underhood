<!DOCTYPE html>
<html>
  <head>
    <title>Underhood | Commision-free Stock Trading & Investing App </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "email": "<%= current_user.email %>"
        }
      </script>
        <script type="text/javascript">
          window.alphaAPIKey = "<%= Rails.application.credentials.alpha[:api_key] %>"
        </script>
        <script src="https://kit.fontawesome.com/43e238e94a.js" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
